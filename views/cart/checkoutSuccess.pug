		link(rel="stylesheet", href="/styles/cart/success.css")
		link(rel="stylesheet", href="/styles/index.css")
		link(rel="stylesheet", href="/styles/info-item.css")
	body
		nav.navbar.navbar-default(role='navigation')
			.container
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					a(href="/home")
						img(src='img/logo.png', alt='')
		.main
			.container
				.sucess.header
					.check-icon
						i.fas.fa-check
				.success-box
					.sucess-content
						.s-title Chào 
							span #{user.name}
						.s-wellcome Chúc mừng bạn đã đặt hàng thành công
						.s-content
							.s-code Mã đơn hàng :
								span.bold #{order.order_code}
							.s-pay Phương thức thanh toán : 
								span.bold #{pay.name}
							.s-total Tổng thanh toán : 
								span.red #{total}
							.s-satus Tình trang : 
								span.red Chưa thanh toán
					.success-footer
						.s-email Mọi thông tin đơn hàng sẽ đưọc gửi đến email của bạn, vui lòng kiểm tra email để biết thêm chi tiết
						.s-button
							a.btn.btn-default.btn-s(href ="/home") Tiếp tục mua sắm
							a.btn.btn-default.btn-o(href = "") Chi tiết đơn hàng		
		footer.footer-about
