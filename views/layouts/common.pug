												a.logout-user(href = "/user/logout?redirectTo=/" + redirectTo ) Đăng xuất
											else
												a.logout-user(href = "/user/logout" ) Đăng xuất
							else
								li
									// a(data-toggle='modal', data-target='#exampleModal', data-whatever='@mdo') Đăng nhập
									if (redirectTo)
										a(href = "/user/login?redirectTo=/"+ redirectTo) Đăng nhập
									else
										a(href = "/user/login") Đăng nhập
							li
								if countCart
									.countCart= countCart
								a.cart-product(href='/cart')
									i.fas.fa-shopping-cart
